# Configurações da Aplicação
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=0  # Desativar em produção

# Chave Secreta - Gere uma nova chave segura para produção
# Use: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=sistema_estoque_hospitalar_2024_mude_esta_chave_em_producao

# Configurações de Segurança
SESSION_COOKIE_SECURE=False  # True em produção (HTTPS)
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE='Lax'
PERMANENT_SESSION_LIFETIME=3600  # 1 hora

# Configurações do Banco de Dados
DB_ENGINE=sqlite  # sqlite, mysql, postgresql
DB_NAME=central.db
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=

# Configuração do SQLAlchemy
SQLALCHEMY_DATABASE_URI=sqlite:///instance/central.db
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False  # Log de queries (ativar apenas para debug)

# Configurações de E-mail (opcional)
MAIL_SERVER=localhost
MAIL_PORT=25
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=no-reply@seusistema.com

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configurações de Upload
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB max upload
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS={'png', 'jpg', 'jpeg', 'gif', 'pdf'}

# Configurações de Cache
CACHE_TYPE='simple'  # 'redis', 'memcached', etc em produção
CACHE_DEFAULT_TIMEOUT=300
# MAIL_PASSWORD=sua-senha
# MAIL_DEFAULT_SENDER=seu-email@example.com

# Configurações de Limite de Taxa
RATELIMIT_DEFAULT=200 per day;50 per hour
RATELIMIT_STORAGE_URI=memory://

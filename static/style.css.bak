/* Reset and Base Styles */
:root {
  --primary-color: #2c3e50;
  --secondary-color: #34495e;
  --accent-color: #3498db;
  --danger-color: #e74c3c;
  --warning-color: #f39c12;
  --success-color: #27ae60;
  --info-color: #2980b9;
  --light-gray: #ecf0f1;
  --medium-gray: #bdc3c7;
  --dark-gray: #2c3e50;
  --text-color: #2c3e50;
  --border-radius: 4px;
  --box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  --transition: all 0.3s ease;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
  background: #f5f5f5;
  min-height: 100vh;
  color: var(--text-color);
  line-height: 1.6;
  font-size: 14px;
}

/* Main Container */
.main-wrapper {
  display: flex;
  min-height: 100vh;
  background: #ffffff;
}

/* Header Styles */
.header {
  background: var(--primary-color);
  box-shadow: var(--box-shadow);
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  height: 70px;
}

.logo {
  display: flex;
  align-items: center;
  gap: 10px;
  color: white;
  text-decoration: none;
}

.logo i {
  font-size: 24px;
  color: var(--accent-color);
}

.logo h1 {
  font-size: 20px;
  font-weight: 600;
  margin: 0;
  color: white;
}

.user-menu {
  display: flex;
  align-items: center;
  gap: 15px;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 10px;
  color: white;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--accent-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 16px;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-weight: 600;
  font-size: 14px;
}

.user-role {
  font-size: 12px;
  opacity: 0.8;
}

.user-unit {
  font-size: 11px;
  opacity: 0.7;
}

/* Sidebar Styles */
.sidebar {
  width: 250px;
  background: var(--secondary-color);
  padding-top: 70px;
  position: fixed;
  height: 100vh;
  overflow-y: auto;
  z-index: 999;
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
}

.sidebar-header {
  padding: 20px;
  background: var(--primary-color);
  text-align: center;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.sidebar-header h3 {
  color: white;
  font-size: 16px;
  margin: 0;
}

.components {
  padding: 20px 0;
}

.components li {
  list-style: none;
  padding: 0;
}

.components li a {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  display: flex;
  align-items: center;
  padding: 12px 20px;
  transition: var(--transition);
  border-left: 3px solid transparent;
}

.components li a:hover {
  color: white;
  background: rgba(255, 255, 255, 0.1);
  border-left-color: var(--accent-color);
}

.components li.active a {
  color: white;
  background: var(--accent-color);
  border-left-color: var(--accent-color);
}

.components li a i {
  margin-right: 10px;
  width: 20px;
  text-align: center;
}

.menu-section {
  padding: 10px 20px;
  margin-top: 20px;
  margin-bottom: 10px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.menu-section span {
  color: rgba(255, 255, 255, 0.6);
  font-size: 11px;
  text-transform: uppercase;
  font-weight: 600;
  letter-spacing: 1px;
}

/* Main Content */
.main-content {
  margin-left: 250px;
  padding-top: 70px;
  min-height: 100vh;
  background: #f5f5f5;
}

.content {
  padding: 20px;
}

/* Card Styles */
.card {
  background: white;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  margin-bottom: 20px;
  border: 1px solid #ddd;
}

.card-header {
  background: var(--primary-color);
  color: white;
  padding: 15px 20px;
  border-radius: var(--border-radius) var(--border-radius) 0 0;
  font-weight: 600;
}

.card-body {
  padding: 20px;
}

.card-title {
  color: var(--primary-color);
  margin-bottom: 20px;
  font-weight: 600;
}

/* Table Styles */
.table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
}

.table th {
  background: var(--primary-color);
  color: white;
  padding: 12px;
  text-align: left;
  font-weight: 600;
  border: 1px solid #ddd;
}

.table td {
  padding: 12px;
  border: 1px solid #ddd;
  background: white;
}

.table-striped tbody tr:nth-child(odd) td {
  background: #f9f9f9;
}

.table-hover tbody tr:hover td {
  background: #f0f0f0;
}

/* Button Styles */
.btn {
  padding: 8px 16px;
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 5px;
  font-size: 14px;
  transition: var(--transition);
  border: 1px solid transparent;
}

.btn-primary {
  background: var(--accent-color);
  color: white;
  border-color: var(--accent-color);
}

.btn-primary:hover {
  background: #2980b9;
  border-color: #2980b9;
}

.btn-success {
  background: var(--success-color);
  color: white;
  border-color: var(--success-color);
}

.btn-success:hover {
  background: #229954;
  border-color: #229954;
}

.btn-warning {
  background: var(--warning-color);
  color: white;
  border-color: var(--warning-color);
}

.btn-warning:hover {
  background: #e67e22;
  border-color: #e67e22;
}

.btn-danger {
  background: var(--danger-color);
  color: white;
  border-color: var(--danger-color);
}

.btn-danger:hover {
  background: #c0392b;
  border-color: #c0392b;
}

.btn-secondary {
  background: var(--medium-gray);
  color: white;
  border-color: var(--medium-gray);
}

.btn-secondary:hover {
  background: #95a5a6;
  border-color: #95a5a6;
}

.btn-sm {
  padding: 5px 10px;
  font-size: 12px;
}

.btn-group {
  display: flex;
  gap: 5px;
}

/* Form Styles */
.form-label {
  display: block;
  margin-bottom: 5px;
  font-weight: 600;
  color: var(--text-color);
}

.form-control {
  width: 100%;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: var(--border-radius);
  font-size: 14px;
  transition: var(--transition);
}

.form-control:focus {
  outline: none;
  border-color: var(--accent-color);
  box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
}

.form-select {
  width: 100%;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: var(--border-radius);
  font-size: 14px;
  background: white;
}

.form-check {
  margin-bottom: 10px;
}

.form-check-input {
  margin-right: 8px;
}

.form-text {
  font-size: 12px;
  color: var(--medium-gray);
  margin-top: 5px;
}

/* Alert Styles */
.alert {
  padding: 12px 16px;
  border-radius: var(--border-radius);
  margin-bottom: 20px;
  border: 1px solid transparent;
}

.alert-success {
  background: #d4edda;
  color: #155724;
  border-color: #c3e6cb;
}

.alert-danger {
  background: #f8d7da;
  color: #721c24;
  border-color: #f5c6cb;
}

.alert-warning {
  background: #fff3cd;
  color: #856404;
  border-color: #ffeaa7;
}

.alert-info {
  background: #d1ecf1;
  color: #0c5460;
  border-color: #bee5eb;
}

/* Badge Styles */
.badge {
  padding: 4px 8px;
  border-radius: var(--border-radius);
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
}

.bg-success {
  background: var(--success-color);
  color: white;
}

.bg-danger {
  background: var(--danger-color);
  color: white;
}

.bg-warning {
  background: var(--warning-color);
  color: white;
}

.bg-info {
  background: var(--info-color);
  color: white;
}

/* Utility Classes */
.text-center {
  text-align: center;
}

.text-muted {
  color: var(--medium-gray);
}

.mb-3 {
  margin-bottom: 15px;
}

.mb-4 {
  margin-bottom: 20px;
}

.mt-3 {
  margin-top: 15px;
}

.d-flex {
  display: flex;
}

.justify-content-between {
  justify-content: space-between;
}

.align-items-center {
  align-items: center;
}

.gap-2 {
  gap: 8px;
}

.w-100 {
  width: 100%;
}

/* Responsive Design */
@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
    transition: var(--transition);
  }
  
  .sidebar.active {
    transform: translateX(0);
  }
  
  .main-content {
    margin-left: 0;
  }
  
  .header {
    padding: 1rem;
  }
  
  .content {
    padding: 15px;
  }
}

/* Flash Messages */
.flash-messages {
  z-index: 9999;
}

.alert-dismissible {
  position: relative;
}

.btn-close {
  position: absolute;
  top: 50%;
  right: 10px;
  transform: translateY(-50%);
  background: none;
  border: none;
  font-size: 16px;
  cursor: pointer;
}

/* Dashboard Cards */
.dashboard-card {
  background: white;
  border-radius: var(--border-radius);
  padding: 20px;
  box-shadow: var(--box-shadow);
  border: 1px solid #ddd;
  margin-bottom: 20px;
}

.dashboard-card h3 {
  color: var(--primary-color);
  font-size: 16px;
  margin-bottom: 10px;
}

.dashboard-card .value {
  font-size: 24px;
  font-weight: 700;
  color: var(--accent-color);
  margin-bottom: 5px;
}

.dashboard-card .trend {
  font-size: 12px;
  color: var(--medium-gray);
}

/* Row and Column utilities */
.row {
  display: flex;
  flex-wrap: wrap;
  margin: -10px;
}

.col-12 {
  flex: 0 0 100%;
  padding: 10px;
}

.col-md-6 {
  flex: 0 0 50%;
  padding: 10px;
}

.col-md-8 {
  flex: 0 0 66.666667%;
  padding: 10px;
}

.col-lg-4 {
  flex: 0 0 33.333333%;
  padding: 10px;
}

.col-lg-6 {
  flex: 0 0 50%;
  padding: 10px;
}

.col-md-4 {
  flex: 0 0 33.333333%;
  padding: 10px;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-end {
  justify-content: flex-end;
}

.d-md-flex {
  display: flex;
}

@media (max-width: 768px) {
  .d-md-flex {
    display: block;
  }
}

.d-grid {
  display: grid;
  gap: 10px;
}

@media (min-width: 768px) {
  .d-md-flex.justify-content-md-end {
    justify-content: flex-end;
  }
}

.table-responsive {
  overflow-x: auto;
}

.shadow {
  box-shadow: var(--box-shadow);
}

.bg-light {
  background: var(--light-gray);
}
